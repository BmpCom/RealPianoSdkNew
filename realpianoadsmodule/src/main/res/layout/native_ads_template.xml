<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.realpianoadsmodule.Native.Template_V
        android:id="@+id/my_template_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:template_type="@layout/smalltemplate_view" />

    <com.example.realpianoadsmodule.Native.Template_V
        android:id="@+id/my_template_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:template_type="@layout/medium_template_view" />

    <com.example.realpianoadsmodule.Native.Template_V
        android:id="@+id/my_template_large_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:template_type="@layout/large_template_view" />

</LinearLayout>
